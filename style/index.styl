

body, html
	width:100%
	height:100%
	
*
	margin: 0px
	padding: 0px
	border-spacing: 0px
	
#header
	position: absolute
	top: 0px
	left: 0px
	width: 100%
	height: 40px
	border-bottom: 1px solid black
	
	#settings
		float: right
		width: 40px
		height: 100%
		background: url(/images/icons/settings.png) no-repeat center
		background-size: 70% 
	
#content
	width: 100%
	position: absolute
	top: 40px
	bottom: 40px
	
#footer
	position: absolute
	bottom: 0px
	left: 0px
	width: 100%
	height: 40px
	border-top: 1px solid black
	
	
#chatWrapper
	position: relative
	top: 10px
	left: 50%
	margin-left: -200px
	width: 400px
	height: 95%
	display: inline-block
	border: 1px solid black
	
#chatHeader
	position: absolute
	top: 0px
	border-bottom: 1px solid black
	width: 400px
	height: 5em
	text-align: center
	
	img
		padding: 20px 10px
	
	
#chatPanel
	position: absolute
	top: 5em
	bottom: 30px
	width: 400px
	overflow-y: scroll
	
#chatInput
	border: 0px
	border-top: 1px solid black
	position: absolute
	bottom: 0px
	width: 400px
	height: 30px

.chatMessage
	padding: 5px
	
	img
		vertical-align: -32%
		padding-right: 5px
