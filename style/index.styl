chat-width()
	400

body, html
	width:100%
	height:100%
	
*
	margin: 0px
	padding: 0px
	border-spacing: 0px
	
#header
	position: absolute
	top: 0px
	left: 0px
	width: 100%
	height: 40px
	border-bottom: 1px solid black
	
	#settings
		float: right
		width: 40px
		height: 100%
		background: url(/images/icons/settings.png) no-repeat center
		background-size: 70% 
	
#content
	width: 100%
	position: absolute
	top: 40px
	bottom: 40px
	
#footer
	position: absolute
	bottom: 0px
	left: 0px
	width: 100%
	height: 40px
	border-top: 1px solid black
	
	
#chatWrapper
	position: relative
	left: 50%
	margin-left: -(chat-width()/2)px
	width: chat-width()px
	height: 100%
	display: inline-block
	border-left: 1px solid black
	border-right: 1px solid black
	
#chatHeader
	position: absolute
	top: 0px
	border-bottom: 1px solid black
	width: chat-width()px
	height: 5em
	text-align: center
	
	img
		padding: 20px 10px
	
	
#chatPanel
	position: absolute
	top: 5em
	bottom: 30px
	width: chat-width()px
	overflow-y: scroll
	
#chatInput
	border: 0px
	border-top: 1px solid black
	position: absolute
	bottom: 0px
	width: chat-width()px
	height: 30px

.chatMessage
	padding: 5px
	
	img
		vertical-align: -32%
		padding-right: 5px


#loginWrapper
	position:fixed
	top:0px
	left:0px
	z-index:1
	width:100%
	height: 100%
	background: grey
	opacity:.9
	
	#login
		background: white
		border: 1px solid black
		height:100px
		width:200px
		position: absolute
		top:50%
		margin-top:-100px
		left: 50%
		margin-left: -100px
		
		table
			padding: 20px 10px
			
			td
				padding:5px

			input
				width: 100px
				
			#register
				float: right
				

